<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>

    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/onetomanyhib</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">bhagyashri@123</property>

        <!-- JDBC connection pool settings -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>

        <!-- Dialect for PostgreSQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Enable Hibernate logging to see SQL statements -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Automatically create or update tables (use with caution in production) -->
        <property name="hibernate.hbm2ddl.auto">create</property>

        <!-- Register annotated classes -->
        <mapping class="org.example.Student"/>
        <mapping class="org.example.Subject"/>
    </session-factory>

</hibernate-configuration>
